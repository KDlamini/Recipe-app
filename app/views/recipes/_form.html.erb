<section class="container col-8">
  <%= form_with(model: recipe) do |form| %>
    <% if recipe.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

        <ul>
          <% recipe.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :preparation_time, style: "display: block" %>
      <%= form.text_field :preparation_time, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :cooking_time, style: "display: block" %>
      <%= form.text_field :cooking_time, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :description, style: "display: block", class: "form-label" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="mb-3 d-flex align-items-center">
      <%= form.label :public, style: "display: block" %>
      <%= form.check_box :public, class: "ms-2" %>
    </div>

    <%= form.hidden_field :user_id, value: current_user.id %>

    <div class="text-center">
      <%= form.submit class: "btn btn-warning" %>
    </div>
  <% end %>
</section>
