    <div class="carousel-item active">
        <%= image_tag('https://post.healthline.com/wp-content/uploads/2020/09/healthy-eating-ingredients-732x549-thumbnail.jpg',
            class: "d-block w-100", alt: 'food') %>
    </div>
    <div class="carousel-item">
        <%= image_tag('https://www.eatthis.com/wp-content/uploads/sites/4/2019/06/deep-dish-pizza-chicago.jpg',
            class: "d-block w-100", alt: 'food') %>
    </div>
    <div class="carousel-item">
        <%= image_tag('https://s3.amazonaws.com/prod.tctmd.com/public/2021-03/Eating%20More%20Ultraprocessed%20%E2%80%98Junk%E2%80%99%20Food%20Linked%20to%20Higher%20CVD%20Risk.jpeg',
            class: "d-block w-100", alt: 'food') %>
    </div>
    <div class="carousel-item">
        <%= image_tag('https://www.organicfarm.it/wp-content/uploads/2019/02/Spaghetti-al-pomodoro.jpg',
            class: "d-block w-100", alt: 'food') %>
    </div>
    <div class="carousel-item">
        <%= image_tag('https://awol.junkee.com/wp-content/uploads/2019/11/30624445_2031384813783830_665928700650323968_n-copy.jpg',
            class: "d-block w-100", alt: 'food') %>
    </div>
    <div class="carousel-item">
        <%= image_tag('https://alivefitandfree.com/wp-content/uploads/2021/06/Healthy-Food-Doesnt-Have-To-Be-Expensive.jpg',
