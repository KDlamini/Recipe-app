<div class="banner bg-light px-4 py-5 text-center border rounded-3">
    <div class="py-5">
        <h2 class="display-5 fw-bold">
            <p>Welcome to the Recipes home</p>
        </h2>
        <div class="mx-auto">
            <div class="btn-group" role="group" aria-label="Basic outlined example">
                <button type="button" class="btn btn-outline-warning text-dark">Food List</button>
                <button type="button" class="btn btn-outline-warning text-dark">
                    <%= link_to "Recipes", recipes_path, class: "text-decoration-none text-dark" %>
                </button>
                <button type="button" class="btn btn-outline-warning text-dark">Shopping</button>
            </div>
        </div>
    </div>
</div>

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
