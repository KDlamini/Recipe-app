
<div class="w-100 d-flex justify-content-center mt-4">
<div class="w-75 d-flex flex-column">
<h1 class="text-center">General Shopping Lists</h1>
<div class="w-100 d-flex justify-content-between mt-4">
<div>Amount of food items needed: <%= @recipe.ingredients.count%></div>
<div>Total amount needed to buy: <span>$</span><%= @total_amount%></div>
</div>
<div class='add_new_food mt-5 mb-3 d-flex w-100 justify-content-end'>
    <%= link_to 'back to ingredients', recipe_path(@recipe)%>
</div>


<table class="table table-striped table-bordered ">
  <thead>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">quantity</th>
      <th scope="col">price</th>
    </tr>
  </thead>
  <tbody>
  <% @recipe.ingredients.each do |ingredient| %>
    <tr>
      <td><%= ingredient.food.name %></td>
      <td><%= ingredient.quantity %></td>
      <td><%= ingredient.quantity * ingredient.food.price %></td>
    </tr>
  <%end%>
  </tbody>
</table>
</div>
</div>